{
  "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "esModuleInterop": true,
      "moduleResolution": "node",
      "declaration": true,
      "strict": true,
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": true,
      "sourceMap": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
          "~shared/*": [
              "../shared/*"
          ]
      },
      "rootDirs": [
          "./src",
      ],
      "types": [
          "node",
      ]
  },
  "include": [
      "src/**/*"
  ],
  "exclude": [
      "node_modules"
  ]
}
